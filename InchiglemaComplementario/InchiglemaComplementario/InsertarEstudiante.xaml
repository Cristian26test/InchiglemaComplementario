<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="InchiglemaComplementario.InsertarEstudiante">
    <ContentPage.Content>
        <StackLayout>
            <Label Text="INSERTAR ESTUDIANTE" FontSize="26" HorizontalTextAlignment="Center"/>
            <Entry x:Name="txtCodigo" Placeholder="ingrese codigo" Keyboard="Numeric"/>
            <Entry x:Name="txtNombre" Placeholder="Ingrese el nombre"/>
            <Entry x:Name="txtApellido" Placeholder="Ingrese el apellido"/>
            <Entry x:Name="txtCurso" Placeholder="Ingrese el curso"/>
            <Entry x:Name="txtParalelo" Placeholder="Ingrese el paralelo"/>
            <Entry x:Name="txtNota" Placeholder="Ingrese la nota"/>
            <Button Text="INGRESAR" Clicked="Button_Clicked"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>